<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UniqueOperation">

        <LinearLayout
            android:id="@+id/result_basic_label_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/addition_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Addition" />
            <TextView
                android:id="@+id/subtraction_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtraction" />
            <TextView
                android:id="@+id/multiplication_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multiplication" />
            <TextView
                android:id="@+id/division_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Division" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/result_basic_field_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_basic_label_ll">
            <EditText
                android:id="@+id/addition_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/subtraction_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/multiplication_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/division_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_advanced_label_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_basic_field_ll">
            <TextView
                android:id="@+id/square_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Square" />
            <TextView
                android:id="@+id/cube_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cube" />
            <TextView
                android:id="@+id/squareroot_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Square Root" />
            <TextView
                android:id="@+id/cuberoot_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cube Root" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/result_advanced_field_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_advanced_label_ll">
            <EditText
                android:id="@+id/square_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/cube_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/square_root_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/cube_root_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result_other_label_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_advanced_field_ll">
            <TextView
                android:id="@+id/power_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Power" />
            <TextView
                android:id="@+id/inverse_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inverse" />
            <TextView
                android:id="@+id/reciprocal_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reciprocal" />
            <TextView
                android:id="@+id/factorial_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remainder" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/result_other_field_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_other_label_ll">
            <EditText
                android:id="@+id/power_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/inverse_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/reciprocal_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/remainder_et"
                android:gravity="center"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_label_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_other_field_ll">
            <TextView
                android:id="@+id/other_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other Number/Percentage" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/other_type_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/other_label_ll">
            <RadioButton
                android:id="@+id/other_number_type_rb"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="" />
            <EditText
                android:id="@+id/other_number_et"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <EditText
                android:id="@+id/other_percentage_et"
                android:gravity="center"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <RadioButton
                android:id="@+id/other_percentage_type_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:text="%" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/input_label_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/other_type_rg">
            <TextView
                android:id="@+id/number_tv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_field_ll"
            android:layout_margin="2.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_label_ll">
            <EditText
                android:id="@+id/number_et"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <Button
                android:id="@+id/calculate_b"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>